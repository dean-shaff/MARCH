generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id                     String            @id @default(cuid())
  createdAt              DateTime          @default(now()) @db.Timestamp(6)
  title                  String
  description            String?
  location               String
  yearCompleted          Int
  typology               BUILDING_TYPOLOGY
  authorEmail            String
  selectedForCompetition Boolean           @default(false)
  images                 Image[]
  projectMaterial        ProjectMaterial[]
  materials              Material[]        @relation("MaterialToProject")
  // TO ADD: architect, contractors
}

model Image {
  id        String  @id @default(cuid())
  url       String
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  // TO ADD: aitags?, tags, MATERIALS!
}

model Supplier {
  id        String     @id @default(cuid())
  name      String
  website   String?
  materials Material[]
}

model Material {
  id               String            @id @default(cuid())
  name             String
  description      String
  supplierId       String
  url              String
  supplier         Supplier          @relation(fields: [supplierId], references: [id])
  projectMaterials ProjectMaterial[]
  projects         Project[]         @relation("MaterialToProject")
}

model ProjectMaterial {
  id         String   @id @default(cuid())
  materialId String
  projectId  String
  usedWhere  String
  material   Material @relation(fields: [materialId], references: [id])
  project    Project  @relation(fields: [projectId], references: [id])
}

enum BUILDING_TYPOLOGY {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  INSTITUTIONAL
}
